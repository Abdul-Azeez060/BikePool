<% layout('./layout/boilerplate') -%>
<style>
  p,
  div {
    margin: 0px;
    padding: 0px;
  }

  .banner {
    background-color: rgb(66, 112, 213);
    padding: 1rem;
    display: flex;
    align-items: center;
  }
  .banner-head {
    text-align: center;
  }
  #banner-heading {
    font-family: Open Sans;
    font-size: 3.5rem;
    color: #ffffff;
    font-weight: 500;
  }
  #banner-caption {
    color: #ffffff;
    opacity: 0.8;
  }
  .banner-foot {
    margin-top: 4rem;
    text-align: center;
    margin-bottom: 1rem;
  }
  #are-you {
    font-size: 2.5rem;
    color: #ffffff;
    margin-bottom: 1rem;
  }

  .banner-foot button {
    margin-right: 0.5rem;
    margin-left: 0.5rem;
    font-size: 1rem;
    padding: 1rem;
    border-radius: 40px;
    width: 10rem;
  }
  #banner-image {
    width: 80%;
    border: 1px solid white;
    padding: 0.5rem;
  }
  .reviews {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: skyblue;
    border: 1px solid rgb(66, 112, 213);
    border-radius: 20px;
    width: 80%;
    padding: 10px;
  }
  .reviews-outer {
    display: flex;
    justify-content: center;
    margin-top: 1rem;
  }
  .reviews form {
    text-align: center;
    width: 70%;
  }
  .form-check {
    width: fit-content;
  }
  .review-submit-btn {
    margin-top: 1rem;
  }

  .carousel-item.active {
    display: block;
    width: 20rem;
  }
  .carousel-inner {
    max-width: 21rem;
  }
  .card-body {
    height: 15rem;
    width: 20rem;
  }
  .card {
    width: 20rem;
  }
  @media (min-width: 768px) and (max-width: 940px) {
    .banner-foot {
      display: none;
    }
    #banner-heading {
      font-size: 2rem;
    }
    #banner-image {
      margin: 0;
    }
  }

  @media (max-width: 767px) {
    .outer-banner-image {
      width: 100%;
    }
    #banner-image {
      margin-top: 2rem;
    }
  }
  .outer-banner-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .feature img {
    width: 8rem;
    margin: 0.5rem;
  }
  .features-container {
    text-align: center;
    margin: 2rem 0;
  }
  #features-head {
    font-weight: 800;
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  .features-box {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    flex-wrap: wrap;
    padding: 0rem 1rem;
  }
  .feature {
    width: 15rem;
    margin: 0.25rem 0.5rem;
  }
  .feature h4 {
    font-size: 1.25rem;
    font-weight: 800;
    margin-top: 0.5rem;
    min-width: max-content;
    padding: 0.25rem;
  }
  .feature p {
    font-size: 0.8rem;
    opacity: 0.9;
  }
  .works {
    margin: 1rem 0.25rem;
    text-align: center;
    padding: 1rem;
  }
  .works h4 {
    font-size: 2rem;
    font-weight: 800;
  }

  .badge a {
    text-decoration: none;
  }

  @media (max-width: 411px) {
    #banner-heading {
      font-size: 180%;
    }
    #banner-caption {
      font-size: 60%;
    }
    #are-you {
      font-size: 125%;
    }
    .banner-foot {
      margin-top: 2%;
    }
    .banner-foot button {
      font-size: 90%;
      padding: 2.5%;
      margin-bottom: 2%;
    }
    #banner-image {
      margin-top: 5%;
      width: 60%;
    }
    #features-head {
      font-size: 120%;
    }
    .feature h4 {
      font-size: 95%;
    }
    .feature img {
      width: 40%;
    }
  }
</style>
<body>
  <div class="outercontainer">
    <div class="banner row">
      <div class="col-md-6 col-sm-12">
        <div class="banner-head">
          <p id="banner-heading" class="shadow-lg">
            Book Your Ride: <br />
            Easy, Fast, Reliable
          </p>
          <p id="banner-caption">
            Your Journey, Our Priority: Simplifying Travel, One Click at a Time
          </p>
        </div>
        <% if (!currUser) { %>
        <div class="banner-foot">
          <p id="are-you">Are You ?</p>
          <div class="buttons">
            <button class="badge text-bg-light">
              <a href="user/register/driver">Rider</a>
            </button>
            <button class="badge text-bg-dark">
              <a href="/user/register/user">Customer</a>
            </button>
          </div>
        </div>
        <% } %>
      </div>
      <div class="col-6 outer-banner-image">
        <img
          class="shadow-lg"
          src="https://inc42.com/wp-content/uploads/2019/12/shutterstock_1526149508-1-1.jpg"
          id="banner-image"
          alt="a bike taxi image" />
      </div>
    </div>
    <div class="features-container border-bottom">
      <h3 id="features-head">Features</h3>
      <div class="features-box">
        <div class="feature">
          <img
            src="https://cdni.iconscout.com/illustration/premium/thumb/man-schedule-life-and-flexible-work-time-8177563-6576945.png"
            alt=""
            srcset="" />
          <h4 class="shadow-lg">Flexible Booking Options</h4>
          <p>
            Book rides immediately or schedule them for later as per your
            convenience
          </p>
        </div>
        <div class="feature">
          <img
            src="https://cdni.iconscout.com/illustration/free/thumb/free-bike-service-6581021-5579363.png?f=webp"
            alt=""
            srcset="" />
          <h4 class="shadow-lg">Quick Ride</h4>
          <p>
            Your Smart Solution for Fast Commutes, Even in Traffic and Rush
            Hours
          </p>
        </div>
        <div class="feature">
          <img
            src="https://cdni.iconscout.com/illustration/premium/thumb/shopping-review-3949822-3277283.png?f=webp"
            alt=""
            srcset="" />
          <h4 class="shadow-lg">Rating and Reviews</h4>
          <p>
            Feature to rate and review rides and drivers for quality assurance.
          </p>
        </div>
      </div>
    </div>
    <div class="works">
      <h4 id="features-head">How it works</h4>
      <img src="" alt="" />
      <h5>
        Making it easy and enjoyable for riders to connect and share bike rides
        efficiently
      </h5>
    </div>

    <div style="text-align: center; display: flex; justify-content: center">
      <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-indicators">
          <button
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide-to="0"
            class="active"
            aria-current="true"
            aria-label="Slide 1"></button>
          <button
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide-to="1"
            aria-label="Slide 2"></button>
          <button
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide-to="2"
            aria-label="Slide 3"></button>
        </div>

        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">
                  Card subtitle
                </h6>
                <p class="card-text">
                  Some quick example text to build on the card title and make up
                  the bulk of the card's content.
                </p>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">
                  Card subtitle
                </h6>
                <p class="card-text">
                  Some quick example text to build on the card title and make up
                  the bulk of the card's content.
                </p>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">
                  Card subtitle
                </h6>
                <p class="card-text">
                  Some quick example text to build on the card title and make up
                  the bulk of the card's content.
                </p>
              </div>
            </div>
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    <div class="reviews-outer">
      <% if (currUser) { %>
      <div class="reviews">
        <h4>Reviews</h4>
        <form
          action="/bookings/reviews"
          method="POST"
          class="needs-validation"
          novalidate>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="4"
              checked
              aria-label="No rating." />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <div class="mb-2 mt-1">
            <label for="comments" class="form-label">Comment</label>
            <textarea
              name="review[comment]"
              id=""
              cols="30"
              rows="3"
              class="form-control"
              required></textarea>
            <div class="invalid-feedback">Please Comment.</div>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="review[showIn]"
              id="flexCheckChecked"
              checked />
            <label class="form-check-label" for="flexCheckChecked">
              Show this review in the home page
            </label>
          </div>
          <button class="btn btn-outline-dark review-submit-btn">Submit</button>
        </form>
        <% } %>
      </div>
    </div>
  </div>
</body>
